@model List<FarmTrack.Models.Entities.PlantedCrop>

@{
    ViewData["Title"] = "Analysis";
}


<div class="analysis-content">
    <section class="analysis-table-section">
        <table>
            <thead>
                <tr>
                    <th>Farm</th>
                    <th>Crop</th>
                    <th>Amount</th>
                    <th>Plant date</th>
                    <th>Harvest date</th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                    @foreach (var plantedCrop in Model)
                    {
                    <tr>
                        <td>@plantedCrop.Field?.FieldName</td> <!-- Förutsätter att Field har en FieldName -->
                        <td>@plantedCrop.Crop?.CropName</td> <!-- Förutsätter att Crop har en CropName -->
                        <td>@plantedCrop.Amount</td> <!-- Förutsätter att Amount finns -->
                        <td>@plantedCrop.PlantDate.ToShortDateString()</td> <!-- Visar PlantDate -->
                    </tr>
                    }
            </tbody>

            </tbody>
        </table>
    </section>
</div>
