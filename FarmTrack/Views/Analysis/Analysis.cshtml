@model List<FarmTrack.Models.Entities.PlantedCrop>

@{
    ViewData["Title"] = "Analysis";
}

<div class="analysis-content">
    <section class="analysis-table-section">
        <table class="analysis-table">
            <thead>
                <tr>
                    <th>Farm</th>
                    <th>Crop</th>
                    <th>Amount</th>
                    <th>Plant Date</th>
                    <th>Harvest Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var plantedCrop in Model)
                    {
                        <tr>
                            <td>@plantedCrop.Field?.FieldName ?? "N/A"</td>
                            <td>@plantedCrop.Crop?.CropName ?? "N/A"</td>
                            <td>@plantedCrop.Amount</td>
                            <td>@plantedCrop.PlantDate.ToShortDateString()</td>
                            <td>@plantedCrop.PlantDate.AddDays(plantedCrop.Crop?.DaysToGrow ?? 0).ToShortDateString()</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No crops have been planted yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
